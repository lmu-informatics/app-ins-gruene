<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/forest</item>
        <item name="colorPrimaryVariant">@color/darkForest</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/trunk</item>
        <item name="colorSecondaryVariant">@color/darkTrunk</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="actionBarStyle">@style/WhiteActionbarStyle</item>
        <item name="actionBarTheme">@style/WhiteActionbarTheme</item>
        <item name="toolbarStyle">@style/WhiteToolbarStyle</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/freude</item>
        <item name="android:windowAnimationStyle">@null</item>

        <!-- deprecated: prefer MDC "on" attrs or use defaults -->
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <!-- Background of Actionbar -->
    <style name="WhiteActionbarStyle" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">?attr/colorSurface</item>
    </style>

    <!-- Icon Color of Actionbar -->
    <style name="WhiteActionbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/asphalt</item>
    </style>

    <!-- TextColor of Actionbar / Toolbar -->
    <style name="WhiteToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/asphalt</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.DefaultComponent</item>
    </style>

    <style name="AppTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.DefaultComponent</item>
    </style>


    <style name="AppTheme.RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/mtrl_extended_fab_min_height</item>
        <item name="android:minWidth">@dimen/mtrl_extended_fab_min_width</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="elevation">@dimen/mtrl_extended_fab_elevation</item>
        <item name="iconPadding">@dimen/mtrl_extended_fab_icon_text_spacing</item>
        <item name="iconSize">@dimen/mtrl_extended_fab_icon_size</item>
        <item name="iconTint">@color/mtrl_fab_icon_text_color_selector</item>
        <item name="rippleColor">@color/mtrl_fab_ripple_color</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.ExtendedFloatingActionButton
        </item>
    </style>

</resources>

<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/WhiteActionbarStyle</item>
        <item name="actionBarTheme">@style/WhiteActionbarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/freude</item>
    </style>

    <style name="WhiteActionbarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/light</item>
        <item name="titleTextStyle">@style/WhiteActionbarTitle</item>
    </style>

    <style name="WhiteActionbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/asphalt</item>
    </style>

    <style name="WhiteActionbarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/asphalt</item>
    </style>

</resources>

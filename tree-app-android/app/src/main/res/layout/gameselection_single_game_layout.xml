<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="4dp"
    android:paddingHorizontal="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">


    <ImageButton
        android:id="@+id/gameselection_single_game_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:contentDescription="@string/overview_single_tree_image_content_description"
        android:elevation="2dp"
        android:focusable="true"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toTopOf="@id/gameselection_single_game_name"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/gameselection_single_game_name"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/freude"
        android:text="@string/overview_single_tree_placeholder_text"
        android:textAlignment="center"
        android:textSize="@dimen/under_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameselection_single_game_icon" />

    <ImageView
        android:id="@+id/gameselection_single_game_state_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/overview_single_tree_image_content_description"
        android:elevation="4dp"
        android:translationX="10dp"
        android:translationY="-10dp"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="@id/gameselection_single_game_icon"
        app:layout_constraintTop_toTopOf="@+id/gameselection_single_game_icon"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:srcCompat="@drawable/ic_checked_mark" />


</androidx.constraintlayout.widget.ConstraintLayout>
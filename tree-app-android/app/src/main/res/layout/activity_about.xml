                android:layout_marginEnd="24dp"
                android:text="@string/about_subtitle_devs2"
                android:textColor="@color/asphalt"
                android:textSize="@dimen/heading3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_subtitle_devs" />
            <TextView
                android:id="@+id/about_text_devs2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/about_text_devs2"
                android:fontFamily="@font/hind_medium"
                android:textColor="@color/asphalt"
                android:textSize="@dimen/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"

    <item android:bottom="5px" android:top="10px" android:left="5px" android:right="5px">

        <shape android:shape="rectangle" >

            <solid android:color="#ccc" />

            <corners android:radius="64dp" />


        </shape>

    </item>

    <!-- White Top color -->

    <item android:bottom="8px" android:top="8px" android:left="5px" android:right="5px">

        <shape android:shape="rectangle" >

            <solid android:color="#FFFFFF" />

            <corners android:radius="64dp" />

        </shape>

    </item>

</layer-list>
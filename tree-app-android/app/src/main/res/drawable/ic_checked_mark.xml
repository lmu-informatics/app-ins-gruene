<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#FF000000"
                        android:endColor="#00000000"

                        android:gradientRadius="28dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <size android:width="40dp"
                        android:height="40dp"/>
                    <solid android:color="@android:color/white" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_completed" android:gravity="center" android:height="24dp" android:width="24dp" />

        </layer-list>
    </item>

</selector>




